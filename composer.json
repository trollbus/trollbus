{
    "name": "trollbus/trollbus",
    "description": "Simple implementation of message bus",
    "keywords": ["message bus"],
    "authors": [
        {
            "name": "Kenny1911",
            "email": "o-muzyka@mail.ru"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "cs-check": "./tools/php-cs-fixer/php-cs-fixer check",
        "cs-fix": "./tools/php-cs-fixer/php-cs-fixer fix",
        "psalm": "./tools/psalm/vendor/bin/psalm",
        "phpunit": "phpunit",
        "checks": [
            "@cs-check",
            "@psalm --no-cache",
            "phpunit"
        ]
    },
    "autoload": {
        "psr-4": {
            "Trollbus\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Trollbus\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "8.1.* || 8.2.* || 8.3.* || 8.4.*",
        "amphp/amp": "^3.0",
        "doctrine/orm": "^2.20 || ^3.0",
        "psr/clock": "^1.0",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "ext-pdo": "*",
        "phpunit/phpunit": "^10.5",
        "symfony/cache": "^7.2"
    }
}
